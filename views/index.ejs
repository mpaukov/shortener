<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css"
    />
    <title>URL shortener</title>
  </head>
  <body>
    <div class="container">
      <h1>URL Shortener</h1>
      <form action="/shortURL" method="POST" class="my-4">
        <div class="row align-items-center">
          <div class="col">
            <label for="fulURL" class="visually-hidden">URL</label>
            <input
              type="url"
              name="fullURL"
              id="fullURL"
              placeholder="Full URL"
              required
              class="form-control"
            />
          </div>
          <div class="col">
            <button type="submit" class="btn btn-success">Shrink</button>
          </div>
        </div>
      </form>
      <table class="table">
        <thead>
          <tr>
            <th>Full URL</th>
            <th class="text-center">Short URL</th>
            <th class="text-center">Clicks</th>
          </tr>
        </thead>
        <tbody>
          <% shortUrls.forEach(shortUrl=>{ %>
          <tr>
            <td>
              <a href="<%= shortUrl.full %>"><%= shortUrl.full %></a>
            </td>
            <td class="text-center">
              <a href="<%= shortUrl.short %>"><%= shortUrl.short %></a>
            </td>
            <td class="text-center"><%= shortUrl.clicks %></td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </body>
</html>
